{
  "name": "Habit Hacker",
  "short_name": "HabitHacker",
  "description": "PWA to hack your habits, with Islamic and cultural content.",
  "start_url": ".",
  "display": "standalone",
  "display_override": [
    "fullscreen",
    "standalone"
  ],
  "orientation": "portrait",
  "background_color": "#F5F5F5",
  "theme_color": "#A0D2EB",
  "lang": "ar",
  "dir": "rtl",
  "scope": "/",
  "id": "/?source=pwa",
  "categories": [
    "lifestyle",
    "health",
    "productivity",
    "education"
  ],
  "iarc_rating_id": "e84b072d-446a-4467-a8b6-b5f7b2b6a3b1",
  "prefer_related_applications": false,
  "related_applications": [],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "scope_extensions": [
    {
      "origin": "hck.github.io"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+habit",
      "url": "/new?habit=%s"
    }
  ],
  "share_target": {
